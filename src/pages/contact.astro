---
/**
 * contact.astro — Page Contact
 * ─────────────────────────────────────────────────────────
 * Sections :
 *   1. Hero + formulaire Netlify Forms
 *   2. Informations de contact & carte placeholder
 */

import Layout from '../components/layout/Layout.astro';

/* Récupère le paramètre ?sujet= depuis l'URL pour pré-remplir le select */
const sujetParam = Astro.url.searchParams.get('sujet') || '';

const sujetMap: Record<string, string> = {
  'devis-atelier': 'Devis atelier',
  'savons-personnalises': 'Savons personnalisés',
};

const prefilledSujet = sujetMap[sujetParam] || '';
---

<Layout
  title="Contact — Savonnerie Loulye"
  description="Contactez la Savonnerie Loulye pour toute question, demande de devis ou commande personnalisée. Aspres-lès-Corps, vallée du Valgaudemar."
>

  <!-- ═══════════════════════════════════════════════════════
       1. HERO + FORMULAIRE
       ═══════════════════════════════════════════════════════ -->
  <section class="bg-beige">
    <div class="container-site section-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">

        <!-- Texte d'introduction -->
        <div class="lg:pt-8">
          <p class="text-sm font-medium text-accent uppercase tracking-wider mb-4">Contact</p>
          <h1 class="text-display-sm lg:text-display-md font-serif text-brand-800 mb-6">
            Parlons de<br />
            <span class="text-accent">votre projet</span>
          </h1>
          <p class="text-lg text-brand-600 leading-relaxed mb-8">
            Une question, une demande de devis ou envie de passer commande ?
            Remplissez le formulaire ci-contre et nous vous répondrons
            dans les meilleurs délais.
          </p>

          <!-- Coordonnées -->
          <div class="space-y-5">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 shrink-0 rounded-full bg-accent-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-brand-800">Adresse</h3>
                <p class="text-sm text-brand-600">Aspres-lès-Corps<br />Vallée du Valgaudemar, 05800</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 shrink-0 rounded-full bg-accent-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-brand-800">Email</h3>
                <a href="mailto:contact@savonnerieloulye.fr" class="text-sm text-accent hover:underline no-underline">
                  contact@savonnerieloulye.fr
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 shrink-0 rounded-full bg-accent-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-brand-800">Téléphone</h3>
                <a href="tel:+33600000000" class="text-sm text-accent hover:underline no-underline">
                  06 00 00 00 00
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Formulaire Netlify Forms -->
        <div>
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="bg-blanc-casse rounded-2xl shadow-card p-6 lg:p-8 space-y-6"
          >
            <!-- Honeypot anti-spam -->
            <p class="hidden">
              <label>Ne remplissez pas ce champ : <input name="bot-field" /></label>
            </p>
            <input type="hidden" name="form-name" value="contact" />

            <!-- Nom -->
            <div>
              <label for="name" class="block text-sm font-medium text-brand-800 mb-1.5">
                Nom complet <span class="text-accent">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Votre nom et prénom"
                class="w-full px-4 py-3 rounded-xl border border-lin bg-white text-brand-800 placeholder-brand-400 focus:outline-none focus:ring-2 focus:ring-accent/40 focus:border-accent transition-all"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-brand-800 mb-1.5">
                Adresse email <span class="text-accent">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="votre@email.fr"
                class="w-full px-4 py-3 rounded-xl border border-lin bg-white text-brand-800 placeholder-brand-400 focus:outline-none focus:ring-2 focus:ring-accent/40 focus:border-accent transition-all"
              />
            </div>

            <!-- Téléphone (optionnel) -->
            <div>
              <label for="phone" class="block text-sm font-medium text-brand-800 mb-1.5">
                Téléphone <span class="text-xs text-brand-400">(optionnel)</span>
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder="06 12 34 56 78"
                class="w-full px-4 py-3 rounded-xl border border-lin bg-white text-brand-800 placeholder-brand-400 focus:outline-none focus:ring-2 focus:ring-accent/40 focus:border-accent transition-all"
              />
            </div>

            <!-- Sujet (select) -->
            <div>
              <label for="sujet" class="block text-sm font-medium text-brand-800 mb-1.5">
                Sujet <span class="text-accent">*</span>
              </label>
              <select
                id="sujet"
                name="sujet"
                required
                class="w-full px-4 py-3 rounded-xl border border-lin bg-white text-brand-800 focus:outline-none focus:ring-2 focus:ring-accent/40 focus:border-accent transition-all appearance-none"
              >
                <option value="" disabled selected={!prefilledSujet}>Choisir un sujet…</option>
                <option value="Question générale" selected={prefilledSujet === ''}>Question générale</option>
                <option value="Devis atelier" selected={prefilledSujet === 'Devis atelier'}>Devis atelier</option>
                <option value="Savons personnalisés" selected={prefilledSujet === 'Savons personnalisés'}>Savons personnalisés</option>
                <option value="Autre">Autre</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-brand-800 mb-1.5">
                Message <span class="text-accent">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                placeholder="Décrivez votre projet ou posez-nous votre question…"
                class="w-full px-4 py-3 rounded-xl border border-lin bg-white text-brand-800 placeholder-brand-400 focus:outline-none focus:ring-2 focus:ring-accent/40 focus:border-accent transition-all resize-y"
              ></textarea>
            </div>

            <!-- Bouton -->
            <button
              type="submit"
              class="w-full btn-primary justify-center text-center"
            >
              Envoyer le message
            </button>

            <p class="text-xs text-brand-400 text-center">
              Vos données sont traitées uniquement pour répondre à votre demande.
              <a href="/mentions-legales" class="underline hover:text-accent">En savoir plus</a>.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════════════════
       2. CARTE PLACEHOLDER
       ═══════════════════════════════════════════════════════ -->
  <section class="bg-blanc-casse">
    <div class="container-site py-0">
      <div class="rounded-2xl overflow-hidden shadow-card mb-[-1px]">
        <!-- Placeholder carte — coordonnées : Aspres-lès-Corps (44.6647, 6.0553) -->
        <div class="aspect-[21/9] bg-lin flex items-center justify-center relative">
          <iframe
            title="Localisation de la Savonnerie Loulye"
            src="https://www.openstreetmap.org/export/embed.html?bbox=5.95%2C44.60%2C6.15%2C44.73&layer=mapnik&marker=44.6647%2C6.0553"
            class="absolute inset-0 w-full h-full border-0"
            loading="lazy"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* Custom select arrow */
  select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%239B8B7A' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.75rem center;
    background-repeat: no-repeat;
    background-size: 1.25em 1.25em;
    padding-right: 2.5rem;
  }
</style>
