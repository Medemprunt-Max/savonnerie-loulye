---
interface Props {
  slug: string;
  name: string;
  price: number;
  image: string;
  shortDescription: string;
}

const { slug, name, price, image, shortDescription } = Astro.props;
---

<a href={`/boutique/${slug}`} class="group block">
  <article class="bg-white rounded-sm overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300">
    <div class="aspect-square overflow-hidden">
      <img
        src={image}
        alt={name}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    </div>
    <div class="p-5">
      <h3 class="font-serif text-lg font-semibold text-gray-800 group-hover:text-ocre transition-colors">
        {name}
      </h3>
      <p class="mt-1 text-sm text-gray-500 leading-relaxed">
        {shortDescription}
      </p>
      <p class="mt-3 text-ocre font-semibold text-lg">
        {price.toFixed(2).replace('.', ',')}&nbsp;&euro;
      </p>
    </div>
  </article>
</a>
