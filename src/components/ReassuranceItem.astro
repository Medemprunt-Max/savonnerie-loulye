---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="flex flex-col items-center text-center px-4">
  <div class="w-16 h-16 rounded-full bg-vert-doux/20 flex items-center justify-center mb-4">
    <Fragment set:html={icon} />
  </div>
  <h3 class="font-serif text-lg font-semibold text-gray-800 mb-2">{title}</h3>
  <p class="text-sm text-gray-600 leading-relaxed max-w-xs">{description}</p>
</div>
