---
import Header from './Header.astro';
import Footer from './Footer.astro';
import '../../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'Savonnerie Loulye — Savons artisanaux naturels, Aspres-lès-Corps',
  description = 'Savonnerie artisanale dans la vallée du Valgaudemar. Savons, cosmétiques et bougies fabriqués à la main à partir d\'ingrédients naturels.',
  ogImage = '/og-image.jpg',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="theme-color" content="#C4956A" />

  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content="fr_FR" />
  <meta property="og:site_name" content="Savonnerie Loulye" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <title>{title}</title>

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "Savonnerie Loulye",
    "description": "Savonnerie artisanale dans la vallée du Valgaudemar. Savons, cosmétiques et bougies fabriqués à la main.",
    "url": "https://savonnerieloulye.fr",
    "telephone": "+33600000000",
    "email": "contact@savonnerieloulye.fr",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Le Village",
      "addressLocality": "Aspres-lès-Corps",
      "postalCode": "05800",
      "addressCountry": "FR"
    },
    "image": "https://savonnerieloulye.fr/og-image.jpg",
    "priceRange": "€",
  })} />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>

<body class="min-h-screen flex flex-col">
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-accent focus:text-white focus:px-4 focus:py-2 focus:rounded-lg"
  >
    Aller au contenu principal
  </a>

  <Header />

  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <Footer />
</body>
</html>
